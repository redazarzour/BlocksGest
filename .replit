modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run BlocksManage"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Update Raw Materials"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inspect Raw Material"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check DB Config"

[[workflows.workflow]]
name = "Run BlocksManage"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5001

[[workflows.workflow]]
name = "Flask Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db migrate -m 'Add unit_price to RawMaterial' && flask db upgrade"

[[workflows.workflow]]
name = "Update Raw Materials"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python update_raw_materials.py"

[[workflows.workflow]]
name = "Inspect Raw Material"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python inspect_raw_material.py"

[[workflows.workflow]]
name = "Check DB Config"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_db_config.py"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
